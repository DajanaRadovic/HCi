<Window x:Class="CMS.IzmjenaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMS"
        mc:Ignorable="d"
        Title="IzmjenaWindow" Height="550" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="prsten.jpg"/>
    </Window.Background>

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Open" Executed="Open_Executed"/>
        <CommandBinding Command="ApplicationCommands.Save" Executed="Save_Executed"/>
    </Window.CommandBindings>
    <Grid Margin="26,10,24.6,10" Background="#7F294B48">
        <Grid.RowDefinitions>
            <RowDefinition Height="352*"/>
            <RowDefinition Height="149*"/>
        </Grid.RowDefinitions>

        <Label x:Name="labelId" Content="ID:" HorizontalAlignment="Left" Height="28" Margin="0,10,0,0" VerticalAlignment="Top" Width="116" FontWeight="Bold"/>
        <TextBox x:Name="textBoxId" HorizontalAlignment="Left" Height="28" Margin="50,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="229" Background="#FFDDDADA"/>
        <Label x:Name="labelaIdGreska" Content="" Width="229" Margin="50,43,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="27" FontSize="10"/>
        <Label x:Name="labelMetal" Content="METAL:" HorizontalAlignment="Left" Height="28" Margin="0,75,0,0" VerticalAlignment="Top" Width="116" FontWeight="Bold"/>
        <ComboBox x:Name="comboBoxMetal" Margin="50,75,464,244"/>
        <Label x:Name="labelaMetalGreska" Content="" Width="229" Margin="50,108,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="27" FontSize="10"/>
        <Label x:Name="labelaSlikaGreska" Content="" Width="229" Margin="497,203,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="27" FontSize="10"/>
        
        
        <Label x:Name="labelBoja" Content="BOJA:" HorizontalAlignment="Left" Height="28" Margin="0,140,0,0" VerticalAlignment="Top" Width="50" FontWeight="Bold"/>
        <ComboBox x:Name="comboBoxBoja" Margin="50,140,464,181">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="#FFF4EFEF" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>


        <Label x:Name="labelaBojaGreska" Content="" Width="229" Margin="50,171,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="27" FontSize="10"/>
        <Label x:Name="labelOblikKamena" Content="OBLIK:" HorizontalAlignment="Left" Height="28" Margin="418,10,0,0" VerticalAlignment="Top" Width="116" FontWeight="Bold"/>
        <ComboBox x:Name="comboBoxOblikKamena" Height="28" Width="229" Margin="503,10,11,314"/>


        <Label x:Name="labelaOblikKamenaGreska" Content="" Width="229" Margin="0,52,11,0" VerticalAlignment="Top" HorizontalAlignment="Right" Height="27" FontSize="10"/>

        <Label x:Name="labelCena" Content="CENA:" HorizontalAlignment="Left" Height="28" Margin="418,65,0,0" VerticalAlignment="Top" Width="116" FontWeight="Bold"/>
        <ComboBox x:Name="ComboBoxCena" Margin="503,65,11,259" Height="28" Width="229"/>
        <Label x:Name="labelSlika" Content="SLIKA:" HorizontalAlignment="Right" Height="28" Margin="0,143,209,0" VerticalAlignment="Top" Width="116" FontWeight="Bold"/>
        <Button x:Name="buttonSlika" Content = "UBACI:" Width="70" Height="30" Margin="503,151,170,171" Click="buttonSlika_Click" />
        <Image x:Name="image" HorizontalAlignment="Right" Height="63" Margin="0,135,17,0" VerticalAlignment="Top" Width="74"/>
        <Label x:Name="labelaCenaGreska" Content="" Width="229" Margin="0,98,11,0" VerticalAlignment="Top" HorizontalAlignment="Right" Height="27" FontSize="10"/>
        <Button x:Name="DugmeZaSlanje" Content="Izmjena" Margin="418,74,255,44.8" Width="70" Height="30" Click="Izmjena_Click" Grid.Row="1"/>
        <Label x:Name="Brend" HorizontalAlignment="Left" Content="BREND:" Margin="0,198,0,0" VerticalAlignment="Top" Width="74" FontWeight="Bold"/>
        <TextBox x:Name="textBoxBrend" HorizontalAlignment="Left" Height="28" Margin="50,198,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="229"  Background="#FFDDDADA"/>
        <Label x:Name="labelaBrendGreska" Content="" Width="129" Margin="0,197,330,0" VerticalAlignment="Top" HorizontalAlignment="Right" Height="27" FontSize="10"/>
        <Label x:Name="Opis" Content="OPIS:"  HorizontalAlignment="Left" Margin="10,293,0,0" VerticalAlignment="Top" Width="74" FontWeight="Bold"/>

        <Canvas Width="230" Height="200" Margin="49,256,466,44.8" Grid.RowSpan="2">
            <DockPanel Width="421" Height="234" Grid.RowSpan="2" Canvas.Left="-38" Canvas.Top="-22">
                <ToolBar Width="388" Background="Transparent" Margin="0,10,0,176.6" RenderTransformOrigin="0.5,0.5">
                    <Button x:Name="buttonOpen" BorderBrush="Transparent" Command="ApplicationCommands.Open" Content="" Height="20" Width="20" Canvas.Left="10" Canvas.Top="-22">
                        <Button.Background>
                            <ImageBrush ImageSource="Images/open.png" Stretch="UniformToFill"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="buttonSave" BorderBrush="Transparent" Command="ApplicationCommands.Save" Content="" Height="20" Width="20" RenderTransformOrigin="1.68,0.3" Margin="10 0 0 0">
                        <Button.Background>
                            <ImageBrush ImageSource="Images/save.png"/>
                        </Button.Background>

                    </Button>
                    <ToggleButton Command="EditingCommands.ToggleBold" x:Name="btnBold" Content="" FontSize="20" Height="20" Margin="0,-3,0,4.8" Width="40" Checked="btnBold_Checked" Foreground="Black">
                        <ToggleButton.Background>
                            <ImageBrush ImageSource="Images/bold.png" Opacity="0.5" Stretch="Uniform"/>
                        </ToggleButton.Background>
                    </ToggleButton>
                    <ToggleButton Command="EditingCommands.ToggleItalic" x:Name="btnItalic" Content="" FontSize="20" Height="20" Width="40"  Margin="-15,-3,0,4.8" Checked="btnItalic_Checked">
                        <ToggleButton.Background>
                            <ImageBrush ImageSource="Images/italic.png" Opacity="0.5" Stretch="Uniform"/>
                        </ToggleButton.Background>
                    </ToggleButton>
                    <ToggleButton Command="EditingCommands.ToggleUnderline" x:Name="btnUnderline" Content="" FontSize="20" Height="20" Width="40"  Margin="-15,-3,0,4.8" Checked="btnUnderline_Checked">
                        <ToggleButton.Background>
                            <ImageBrush ImageSource="Images/underline.png" Opacity="0.5" Stretch="Uniform"/>
                        </ToggleButton.Background>
                    </ToggleButton>
                    <Separator/>
                    <ComboBox x:Name="cmbFontFamily" Width="125" IsEditable="True" SelectionChanged="cmbFontFamily_SelectionChanged" Margin="0,10,0,17" Height="17" FontSize="10" BorderThickness="2" RenderTransformOrigin="0.181,0.744"/>
                    <ComboBox x:Name="cmbFontSize" Opacity="1" Width="40" IsReadOnly="False" IsEditable="True" TextBoxBase.TextChanged="cmbFontSize_TextChanged" Height="5" Margin="10,4,0,10" FontSize="10" BorderThickness="2" RenderTransformOrigin="0.181,0.744">

                    </ComboBox>
                    <Button x:Name="btnColor" Content="A" Click="btnColor_Click" Width="20" Height="25" RenderTransformOrigin="-0.914,-0.855" Margin="10,0,0,7.4" FontWeight="Bold" Background="Gray"/>
                </ToolBar>
                <RichTextBox x:Name="rtbEditor" SelectionChanged="rtbEditor_SelectionChanged" Background="Transparent" BorderBrush="{x:Null}" CaretBrush="White" Width="353"  Margin="-360,62,25,99.6"/>

            </DockPanel>
            <StatusBar x:Name="stbStatus" Height="33" Canvas.Left="51" Canvas.Top="157" Width="60">
                <StatusBarItem Margin="0,0,0,-0.2" Width="60" Height="33" VerticalAlignment="Top">
                    <TextBlock x:Name="WordNumber" Background="Transparent"  FontSize="18"/>
                </StatusBarItem>
            </StatusBar>
            <Label x:Name="labelWords" Content="Words:" Height="33" Canvas.Top="157" Width="51" FontSize="12" Canvas.Left="-38"/>

        </Canvas>
    </Grid>
